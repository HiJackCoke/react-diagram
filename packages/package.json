{
   "name": "react-cosmos-diagram",
   "version": "0.5.3",
   "description": "React Diagram",
   "scripts": {
      "build": "rm -rf dist && rollup -c node:@reactdiagram/rollup-config --environment NODE_ENV:production && npm run css",
      "css": "postcss styles/style.css --config ../tooling/postcss-config/postcss.config.js --dir dist",
      "release": "standard-version --release-as minor && node:../conventionalGithubReleaser",
      "release-major": "standard-version --release-as major && node:../conventionalGithubReleaser",
      "release-patch": "standard-version && node:../conventionalGithubReleaser"
   },
   "workspaces": [
      "./packages/*",
      "./tooling/*"
   ],
   "keywords": [
      "react",
      "node-based UI",
      "graph",
      "diagram",
      "workflow",
      "react-diagram"
   ],
   "files": [
      "dist"
   ],
   "source": "src/index.ts",
   "main": "dist/umd/index.js",
   "module": "dist/esm/index.js",
   "types": "dist/esm/index.d.ts",
   "sideEffects": [
      "*.css"
   ],
   "license": "MIT",
   "publishConfig": {
      "access": "public"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/taehunlim/react-diagram.git",
      "directory": "packages"
   },
   "dependencies": {
      "classcat": "^5.0.4",
      "d3": "^7.8.4",
      "d3-drag": "^3.0.0",
      "d3-selection": "^3.0.0",
      "d3-zoom": "^3.0.0",
      "zustand": "^4.3.7"
   },
   "peerDependencies": {
      "react": ">=17",
      "react-dom": ">=17"
   },
   "devDependencies": {
      "@types/d3": "^7.4.0",
      "@types/d3-drag": "^3.0.2",
      "@types/d3-selection": "^3.0.5",
      "@types/d3-zoom": "^3.0.1",
      "@reactdiagram/rollup-config": "workspace:*",
      "@reactdiagram/tsconfig": "workspace:*",
      "@types/node": "^18.7.16",
      "@types/react": ">=17",
      "@types/react-dom": ">=17",
      "react": "^18.2.0",
      "typescript": "^4.9.4"
   },
   "rollup": {
      "globals": {
         "classcat": "cc",
         "d3-selection": "d3Selection",
         "d3-zoom": "d3Zoom",
         "d3-drag": "d3Drag",
         "zustand": "zustand",
         "zustand/shallow": "zustandShallow"
      },
      "name": "ReactCosmosDiagram"
   }
}
